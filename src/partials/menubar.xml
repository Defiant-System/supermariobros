<MenuBar>
	<Menu name="Super Mario Bros">
		<Menu name="About Super Mario Bros" shell="win -a"/>
		<Menu type="divider"/>
		<Menu name="Quit Super Mario Bros" shell="win -c"/>
	</Menu>
	<Menu name="Game">
		<Menu name="Pause Game" click="toggle-pause" hotkey="alt+p"/>
		<Menu type="divider"/>
		<Menu name="Turn Audio Off" click="toggle-audio" hotkey="alt+m"/>
		<Menu name="Music On" click="toggle-music"/>
		<Menu name="Sound Fx On" click="toggle-sound-fx"/>
		<Menu type="divider"/>
		<Menu name="Change Level&#8230;">
			<Menu name="Level 1">
				<Menu name="Stage 1" click="set-level" arg="1-1"/>
				<Menu name="Stage 2" click="set-level" arg="1-2"/>
				<Menu name="Stage 3" click="set-level" arg="1-3"/>
				<Menu name="Stage 4" click="set-level" arg="1-4"/>
